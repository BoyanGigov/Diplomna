<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="debug" monitorInterval="30">

    <Properties>
        <Property name="defaultLayout">%d [%t] (%F:%L) %-5p - %m%n</Property>
        <Property name="defaultLogSize">10 MB</Property>
        <Property name="defaultRollingFiles">5</Property>
        <Property name="defaultLevel">debug</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${defaultLayout}"/>
        </Console>

        <RollingFile name="myLog" fileName="../logs/myLog.log" filePattern="../logs/myLog.log.%i">
            <PatternLayout pattern="${defaultLayout}"/>
            <Policies><SizeBasedTriggerPolicy size="${defaultLogSize}"/></Policies>
            <DefaultRolloverStrategy max="${defaultRollingFiles}"/>
        </RollingFile>

        <RollingFile name="portal" fileName="../logs/portal.log" filePattern="../logs/portal.log.%i">
            <PatternLayout pattern="${defaultLayout}"/>
            <Policies><SizeBasedTriggerPolicy size="${defaultLogSize}"/></Policies>
            <DefaultRolloverStrategy max="${defaultRollingFiles}"/>
        </RollingFile>
    </Appenders>


<!--&lt;!&ndash;    all&ndash;&gt;-->
<!--    <Logger name="all" level="debug" additivity="false">-->
<!--        <AppenderRef ref="myLog"/>-->
<!--    </Logger>-->

<!--    portal-->
    <Root level="warn">
        <AppenderRef ref="portal"/>
    </Root>
    <Logger name="all" level="debug" additivity="false">
        <AppenderRef ref="myLog"/>
    </Logger>

</Configuration>